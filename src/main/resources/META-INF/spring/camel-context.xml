<!-- Configures the Camel Context -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:camel-cxf="http://camel.apache.org/schema/cxf" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="        
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd">

	<bean id="gZipInInterceptor" class="org.apache.cxf.transport.common.gzip.GZIPInInterceptor" />
	<bean id="gZipOutInterceptor" class="org.apache.cxf.transport.common.gzip.GZIPOutInterceptor" />

	<camel-cxf:cxfEndpoint id="weatherLookupClient"
		address="http://www.webservicex.net/globalweather.asmx" serviceClass="net.webservicex.GlobalWeatherSoap">
		<camel-cxf:inInterceptors>
			<ref bean="gZipInInterceptor" />
		</camel-cxf:inInterceptors>
		<camel-cxf:outInterceptors>
			<ref bean="gZipOutInterceptor" />
		</camel-cxf:outInterceptors>
	</camel-cxf:cxfEndpoint>

	<camelContext id="_camelContext1" xmlns="http://camel.apache.org/schema/spring"
		xmlns:order="http://fabric8.com/examples/order/v7">

		<dataFormats>
			<xmljson id="xmljson"/>
		</dataFormats>

		<restConfiguration component="restlet" bindingMode="off">
			<componentProperty key="contextPath" value="/globalweather/rest" />
			<componentProperty key="port" value="8080" />
			<dataFormatProperty key="prettyPrint" value="true" />
		</restConfiguration>

		<!-- defines the rest service wrapper for a simple rest to soap proxy -->
		<rest path="/citiesByCountry" consumes="application/json"
			produces="application/json">
			<description>Rest service, returns a list of city names given a
				country name</description>

			<!-- this is a rest GET to view an organization by the given id -->
			<get uri="/{countryName}">
				<description>Find city names by country name</description>
				<!--  <param name="countryName" type="path" description="The country name that retruns a list of cities" dataType="string"/> -->
				<to uri="direct:citiesByCountry" />
			</get>

		</rest>

		<route id="citiesByCountry">
			<from uri="direct:citiesByCountry" />
			<removeHeaders pattern="org.restlet.http.headers" />
			<setBody>
				<header>countryName</header>
			</setBody>
			<setHeader headerName="operationNamespace">
				<constant>http://www.webserviceX.NET</constant>
			</setHeader>
			<setHeader headerName="operationName">
				<constant>GetCitiesByCountry</constant>
			</setHeader>
			<to uri="cxf:bean:weatherLookupClient" />
			<marshal ref="xmljson" />
			<removeHeaders pattern="*" />
		</route>
	</camelContext>
</beans>
